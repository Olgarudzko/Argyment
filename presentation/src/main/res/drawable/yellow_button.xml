<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corners_radius"/>
            <solid android:color="@color/button_back_layer" />
            <size
                android:width="@dimen/base_button_width"
                android:height="@dimen/base_button_height" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_front_layer" />
            <size
                android:width="@dimen/inner_width_base_button"
                android:height="@dimen/inner_height_base_button" />
        </shape>
    </item>
</layer-list>